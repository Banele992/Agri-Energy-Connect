@model Agri_Energy_Connect.Models.Product

@{
    ViewData["Title"] = "Product Create";
}

<div class="text-center">
    <h1>Create Product</h1>
</div>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProdName" class="control-label">Product Name</label>
                <input asp-for="ProdName" class="form-control" />
                <span asp-validation-for="ProdName" class="text-danger"></span>
            </div>                  

            <div class="form-group">
                <label asp-for="ProdDescription" class="control-label"></label>
                <input asp-for="ProdDescription" class="form-control" />
                <span asp-validation-for="ProdDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateTime" class="control-label"></label>
                <input asp-for="DateTime" class="form-control" />
                <span asp-validation-for="DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Image</label>
                <input type="file" name="ImageFile" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            @if (ViewBag.IsFarmer == true)
            {
                <input type="hidden" asp-for="FarmerId" value="@ViewBag.CurrentFarmerId" />
                <div class="form-group">
                    <label class="control-label">Farmer</label>
                    <input type="text" class="form-control" value="@ViewBag.CurrentFarmerName" readonly />
                </div>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="FarmerId" class="control-label"></label>
                    <select asp-for="FarmerId" class="form-control" asp-items="ViewBag.FarmerId"></select>
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
