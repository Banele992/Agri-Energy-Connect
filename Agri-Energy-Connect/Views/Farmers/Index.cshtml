@model IEnumerable<Agri_Energy_Connect.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<h1>Farmers</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add Farmer</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FarmerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FarmerEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FarmerPhone)
                    </td>

                    <td>
                        <a asp-action="Details" asp-route-id="@item.FarmerId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.FarmerId" class="btn btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.FarmerId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
